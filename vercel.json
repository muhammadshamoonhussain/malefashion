{
  "version": 2,
  "builds": [
    {
      "src": "db.json",
      "use": "@vercel/node"
    },
    {
      "src": "dist/*", 
      "use": "@vercel/static"
    },
    { "src": "dist/your-project-name/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/db.json"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
