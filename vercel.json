{
  "version": 2,
  "builds": [
    {
      "src": "db.json",
      "use": "@vercel/node"
    },
    {
      "src": "dist/*", 
      "use": "@vercel/static"
    },
    { "src": "dist/your-project-name/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/db.json"
    },
    {
      "src": "/(.*)", 
      "dest": "/dist/$1"
    }
    
  ],
   "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
